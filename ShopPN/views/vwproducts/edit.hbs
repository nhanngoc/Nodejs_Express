<div class="card">
    <div class="card-header">
        <h4>Edit nhan vien</h4>
    </div>

    <div class="card-body">
        <form method="POST">
            <div class="form-group">
                <label for="txtid">id</label>
                <input type="text" class="form-control" id="txtid" name="id" readonly
                    value="{{this.nhanvien.id}}">
            </div>
            <div class="form-group">
                <label for="txthoten">họ tên</label>
                <input type="text" class="form-control" id="txthoten" name="hoten" autofocus
                    value="{{this.nhanvien.hoten}}">
            </div>
            <a class="btn btn-success" href="/admin/nhanvien" role="button" title="Back to List">
                <i class="fa fa-backward" aria-hidden="true"></i>
            </a>
            <button type="submit" class="btn btn-danger" title="remove" formaction="/admin/nhanvien/del">
                <i class="fa fa-check" aria-hidden="true"></i>
            </button>
            <button type="submit" class="btn btn-primary" title="save" formaction="/admin/nhanvien/update">
                <i class="fa fa-check" aria-hidden="true"></i>
                Save
            </button>
        </form>
    </div>
    <div class="card-footer text-muted">
        Footer
    </div>
</div>