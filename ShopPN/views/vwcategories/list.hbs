            </div>
        <thead>
            <tr>
                <th scope="col">Mã</th>
                <th scope="col">Tên</th>
                <th scope="col">ảnh</th>
                <th scope="col">số lượng</th>
                <th scope="col">số lượng bán</th>
                <th scope="col">giá</th>
                <th scope="col">size</th>
                <th scope="col">Mô tả</th>
                <th scope="col">Tình trạng</th>
                <th scope="col">Ngày nhập</th>
                <th scope="col">&nbsp;</th>

            </tr>
        </thead>
        <tbody>
            {{#each this.sanpham}}
            <tr>

                <th scope="row">{{MaSP}}</th>
                <td>{{TenSP}}</td>
                <td>{{Anh}}</td>
                <td>{{SoLuong}}</td>
                <td>{{SoLuongBan}}</td>
                <td>{{Gia}}</td>
                <td>{{Size}}</td>
                <td>{{MoTa}}</td>
                <td>{{TinhTrang}}</td>
                <td>{{NgayNhap}}</td>
