    </div>
{{else}}
<div class="card-body">
    <p class="card-text">Bạn chưa mua hàng</p>
</div>
{{/if}}
<script type="text/javascript">
              function xemKetQua() {
                 var input_text = document.getElementById("mes")
                 var result = document.getElementById("results")
                 var max =Number($("input.smallinput").attr("max"));
                 var html = '';
                 var text = input_text.value
                 if(text > max){
                 html +='<input type="text" class="smallinput" name="quantity" style="width: min-content;" id="mes" onkeyup="xemKetQua()" value="'+max+'" min="1" max="'+max+'" size="1">'
                 }else{
            	html +='<input type="text" class="smallinput" name="quantity" style="width: min-content;" id="mes" onkeyup="xemKetQua()" value="'+text+'" min="1" max="'+max+'" size="1">'
               } 
                 result.innerHTML = html;
              }
              
</script>

