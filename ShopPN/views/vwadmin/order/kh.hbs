                        <th>Đơn hàng</th>
                    </tr>
                </thead>
                <tbody>
                        {{#each this.khachhang}}
                    <tr>
                        <td>{{MaKH}}</td>
                        <td>{{tenkh}}</td>
                        {{!-- <td>{{username}}</td>
                        <td>{{password}}</td> --}}
                        <td>{{email}}</td>
                      
                        {{!-- <td>{{diachi}}</td> --}}
                        <td>{{sdt}}</td>
                        <td>
                            <a href="/admin/kh/hoadon/{{MaKH}}" title="xem đơn đặt hàng">
                            Xem đơn đặt hàng
                            </a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        {{/if}}
        </div>
        <!-- end -->
    </div>
</div>
<!-- end row -->