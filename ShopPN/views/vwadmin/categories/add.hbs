<div class="card">
    <div class="card-header">
        <h4>Thêm mới loại sản phẩm</h4>
    </div>

    <div class="card-body">
        <form name="myform" method="POST" action="" onsubmit="return validateform()">
            <div class="form-group">
                <label for="MaDM" class="col-md-3 control-label">Tên danh mục</label>
                <div class="col-md-9">
                    <select class="custom-select mt-3"id="txtMaDM" name="MaDM">
                        <option value="">Chọn danh mục</option>
                        {{#each this.sanpham}}
                        <option value="{{MaDM}}">{{MaDM}}-{{TenDM}}</option>
                        {{/each}}
                    </select>
                </div>
            </div>
           
            <div class="form-group">
                <label for="TenLoai" class="col-md-3 control-label">Tên Loại</label>
                <div class="col-md-9">
                    <input type="text" class="form-control" name="TenLoai" placeholder="Nhập tên loại">
                </div>
            </div>
            
            <button type="submit" class="btn btn-primary">
                <i class="fa fa-check" aria-hidden="true"></i>
                Thêm mới
            </button>
        </form>
    </div>
    <div class="card-footer text-muted">

    </div>
</div>
<script language="javascript">
    function validateform() {
        var MaDM = document.myform.MaDM.value;
        var TenLoai = document.myform.TenLoai.value;

        if(MaDM==""){
            alert('Chưa chọn danh mục, mời bạn chọn lại!')
            return false
        }
        if(TenLoai==""){
            alert('Chưa nhập Tên, mời bạn nhập lại!')
            return false
        }
        
        //alert('Thêm thành công!')
        //return true
    }
</script>