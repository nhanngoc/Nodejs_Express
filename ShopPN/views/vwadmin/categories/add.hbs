<div class="card">
    <div class="card-header">
        <h4>Thêm mới loại sản phẩm</h4>
    </div>

    <div class="card-body">
        <form method="POST" action="">
            <div class="form-group">
                <label for="MaDM" class="col-md-3 control-label">Tên danh mục</label>
                <div class="col-md-9">
                    <select class="custom-select mt-3"id="txtMaDM" name="MaDM">
                        <option selected="">Chọn danh mục</option>
                        {{#each this.sanpham}}
                        <option value="{{MaDM}}">{{MaDM}}-{{TenDM}}</option>
                        {{/each}}
                    </select>
                </div>
            </div>
           
            <div class="form-group">
                <label for="TenLoai" class="col-md-3 control-label">Tên Loại</label>
                <div class="col-md-9">
                    <input type="text" class="form-control" name="TenLoai" placeholder="Nhập tên loại">
                </div>
            </div>
            
            <button type="submit" class="btn btn-primary">
                <i class="fa fa-check" aria-hidden="true"></i>
                Thêm mới
            </button>
        </form>
    </div>
    <div class="card-footer text-muted">

    </div>
</div>