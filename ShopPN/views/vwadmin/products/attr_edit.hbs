<div class="card">
    <div class="card-header">
        <h4>Sửa thuộc tính chi tiết</h4>
    </div>

    <div class="card-body">
        <form method="POST">
            <div class="form-group">
                <label for="sp_id" class="col-md-3 control-label">Mã chi tiết</label>
                <div class="col-md-9">
                    <input type="number" class="form-control" name="sp_id" readonly 
                    value="{{this.product.sp_id}}">
                </div>
            </div>
            <div class="form-group">
                <label for="color" class="col-md-3 control-label">Màu sắc</label>
                <div class="col-md-9">
                    <input type="text" class="form-control" name="" readonly 
                    value="{{this.product.color}}">
                </div>
            </div>
             <div class="form-group">
                <div class="col-md-9">
                    <h6 class="font-14 mt-3">Sửa kích thước:</h6>
                <select class="form-control" data-toggle="select2" id="txtsize_id" name="size_id">
                        {{!-- <option selected="">Chọn sản phẩm</option> --}}
                        <optgroup label="Kích thước:">
                        <option value="{{this.product.size_id}}">{{this.product.size}} ({{this.product.title}})</option>
                        </optgroup>
                        <optgroup label="Chọn kích thước mới:">
                            {{#sizes}}
                            <option value="{{this.size_id}}">{{this.size}} ({{this.title}})</option>
                            {{/sizes}}
                        </optgroup>
                    </select>
                </div>
            </div>
            
            <div class="form-group">
                <label for="soluong" class="col-md-3 control-label">Số lượng</label>
                <div class="col-md-9">
                    <input type="text" class="form-control" name="soluong" 
                    value="{{this.product.soluong}}">
                </div>
            </div>
            <button type="submit" class="btn btn-primary" title="save" formaction="/admin/attr/update">
                <i class="fa fa-check" aria-hidden="true"></i>
                Cập nhật
            </button>
        </form>

        
    </div>
    <div class="card-footer text-muted">
        
    </div>
</div>